	<table class="table-default">
		<tr>
			<th><?= __('module_investment_month_year') ?></th>
			<th><?= __('module_investment_interest') ?></th>
			<th><?= __('module_investment_invested') ?></th>
			<th><?= __('module_investment_gain') ?></th>			
