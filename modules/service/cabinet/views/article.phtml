			<td><?= $value->interest ?>%</td>
			<td><?= $value->invested ?> Kč</td>
			<td><?= $value->invested * $value->interest / 100 ?> Kč</td>
			<?php if ( $this->hasCommission ) : ?>
				<td><?= $value->commission ?></td>
